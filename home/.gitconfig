[user]
	name = naohiro ono
	email = obcat@icloud.com
[core]
	autocrlf = input
	editor = vim
[pager]
	log = (type diff-highlight &>/dev/null && diff-highlight || cat) | less
	show = (type diff-highlight &>/dev/null && diff-highlight || cat) | less
	diff = (type diff-highlight &>/dev/null && diff-highlight || cat) | less
[blame]
	date = human
	coloring = highlightRecent
[commit]
	verbose = true
[diff]
	colorMoved = default
	colorMovedWS = allow-indentation-change
	algorithm = histogram
	wsErrorHighlight = all
[color "blame"]
	highlightRecent = blue
[color "diff"]
	context = white
	meta = white ul
	frag = cyan ul
	func = white
	old = red
	new = green
	commit = blue
	# diff.wsErrorHighlight
	whitespace = red red
	# diff.colorMoved
	oldMoved = "#ad6d6d"
	newMoved = "#84896b"
	oldMoveddimmed = "#ad6d6d"
	newMoveddimmed = "#84896b"
[color "diff-highlight"]
	oldNormal = "#ad6d6d"
	oldHighlight = red
	newNormal = "#84896b"
	newHighlight = green
[init]
	defaultBranch = main
[log]
	date = human
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[alias]
	amend = commit --amend
	current-branch = symbolic-ref --short HEAD
	graph = log --all --decorate --oneline --graph
	ignored = ls-files --others --ignored --exclude-standard --directory
	short = status --short
	today = graph --since=midnight
	tracked = ls-files --cached
	unshallow = fetch --unshallow
	unstage = restore --staged
	untracked = ls-files --others --exclude-standard --directory
[include]
	path = ~/.gitconfig_local
